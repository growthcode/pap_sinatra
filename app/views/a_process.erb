<div class="page-header">
  <h1><%="'#{@paps.process_name.capitalize}'"%> Action Process</h1>
</div>
<div class="row">
<br>

<form method="post" action="/paps/<%= @paps.id %>/action/create" class="col-md-4">
  <div class="form-group">
    <input type="text" name="action_statement" placeholder="Single Action Statement (1 step and it is done!)" class="form-control">
  </div>
  <div class="form-group form-inline" id="formpap" >
    <input type="text" name="acting_person_title" class="form-control" placeholder="Do'ers Title">
    <input type="text" name="acting_person" class="form-control" placeholder="Person's Name">
  </div>
  <div class="form-group">
    <select name="priority" class="form-control">
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option>4</option>
      <option>5</option>
    </select>
  </div>
  <div class="form-group">
    <input type="text" name="email" class="form-control" placeholder="email">
  </div>
  <div class="form-group">
    <textarea name="description" placeholder="Notes or details go here... but if it is an 'actionable' item, then it belongs on it's own action step."></textarea>
  </div>
  <div class="checkbox">
    <label>
      <input type="checkbox" name="status" value="completed"> Complete?
    </label>
  </div>
  <button type="submit" class="btn btn-default">Create PAP</button>
</form>

</div>
