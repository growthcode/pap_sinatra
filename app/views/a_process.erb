<div class="row">

<ol>
  <% @paps.actions.each do |pap| %>
    <li><%= pap.action_statement %></li>
    - <%= pap.priority %> Priority Level
    <br>- To be executed by: <%= pap.acting_person %>, <%= pap.acting_person_title %>
    <br>- Optional details: <%= pap.description %>
    <% if pap.status == "completed" %>
      <br>- <%= "Task has been completed and is ready for use." %>
    <% else %>
      <br><br>
    <% end %>
  <% end %>
</ol>

</div>






