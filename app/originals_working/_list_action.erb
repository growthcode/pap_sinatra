<form action="/paps/<%= @paps.id %>" method="post">
  <input type="hidden" name="_method" value="put">

<ol id="sortable">
  <% @paps.actions.each_with_index do |action_step, index| %>
    <li>"{<%= action_step.id %>} action_step.id" {<%= action_step.id %>},
    <input type="hidden" name="step_id" value="<%= action_step.id %>">
    <input type="hidden" name="order" class="hook--order"  value="<%= index + 1 %>">
    <br>
    - action_step.action_statement: {<%= action_step.action_statement %>},
    - action_step.priority {<%= action_step.priority %>}
    - action_step.acting_person {<%= action_step.acting_person %>}, action_step.acting_person_title {<%= action_step.acting_person_title %>}
    - action_step.description {<%= action_step.description %>}
    <% if action_step.status == "completed" %>
      - <%= "Task has been completed and is ready for use." %>
    <% else %>
    <% end %> | <a href="#">Edit</a> | <a href="#">Delete</a>
  <br>
  <br>
  <% end %></li>
  <br>

</ol>

  <button type="submit" class="btn btn-default">Update</button>
</form>
